@model IEnumerable<Accessio.Models.GatePass>

@{
    ViewData["Title"] = "Gate Pass Applications";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gate Pass Applications</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Request</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm text-center" style="table-layout: fixed; width: 100%;">
            <thead class="table-primary">
                <tr>
                    <th style="width: 15%;">Applicant</th>
                    <th style="width: 20%;">Address</th>
                    <th style="width: 10%;">Applied</th>
                    <th style="width: 25%;">Vehicle</th>
                    <th style="width: 10%;">Study Load</th>
                    <th style="width: 10%;">Registration</th>
                    <th style="width: 10%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-wrap">
                            @($"{item.FirstName} {item.LastName}") <br />
                            <span class="badge bg-info">@item.Role</span>
                            <span class="badge bg-primary">@item.CourseAndYear</span>
                            <span class="badge bg-secondary">@item.Department</span>
                        </td>
                        <td class="text-wrap">@item.Address</td>
                        <td>@item.ApplicationDate.ToString("MMM dd, yyyy")</td>
                        <td class="text-wrap">
                            #: @item.VehiclePlateNo <br />
                            <strong>Info:</strong> @($"{item.VehicleType} {item.Maker} {item.Color}") <br />
                            <strong>Reg:</strong> @item.RegistrationExpiryDate?.ToString("MMM dd, yyyy")
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                            {
                                <a href="@Url.Content(item.StudyLoadPdfPath)" target="_blank" class="text-primary">View PDF</a>
                            }
                            else
                            {
                                <span class="text-muted">No PDF</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.RegistrationPdfPath))
                            {
                                <a href="@Url.Content(item.RegistrationPdfPath)" target="_blank" class="text-primary">View PDF</a>
                            }
                            else
                            {
                                <span class="text-muted">No PDF</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-3">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Gate Pass
            </li>
        </ol>
    </nav>
}

