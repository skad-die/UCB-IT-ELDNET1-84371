@model IEnumerable<Accessio.Models.GatePass>

@{
    ViewData["Title"] = "Gate Pass Applications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gate Pass Applications</h2>
        <a asp-action="Create" class="btn btn-primary">+ New</a>
    </div>

    <div class="shadow-sm">
        <table class="table table-striped table-hover table-bordered align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Applied</th>
                    <th>Academic Info</th>
                    <th>Vehicle</th>
                    <th>Study Load</th>
                    <th>Registration</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@($"{item.FirstName} {item.LastName}")</td>
                        <td>@item.Address</td>
                        <td>@item.ApplicationDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <div><strong>Role:</strong> @item.Role</div>
                            <div><strong>Dept:</strong> @item.Department</div>
                            <div><strong>Course:</strong> @item.CourseAndYear</div>
                        </td>
                        <td>
                            <div><strong>Plate:</strong> @item.VehiclePlateNo</div>
                            <div><strong>Info:</strong> @($"{item.VehicleType} {item.Maker} {item.Color}")</div>
                            <div><strong>Registration:</strong> @item.RegistrationExpiryDate?.ToString("MMM dd, yyyy")</div>
                        </td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                            {
                                <a href="@item.StudyLoadPdfPath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.RegistrationPdfPath))
                            {
                                <a href="@item.RegistrationPdfPath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
