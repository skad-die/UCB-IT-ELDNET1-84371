@model IEnumerable<Accessio.Models.GatePass>

@{
    ViewData["Title"] = "Gate Pass Applications";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gate Pass Applications</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Request</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-primary text-center">
                <tr>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Applied</th>
                    <th>Academic Info</th>
                    <th>Vehicle</th>
                    <th>Study Load</th>
                    <th>Registration</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td colspan="7" class="p-0">
                            <a href="@Url.Action("Details", new { id = item.Id })"
                               class="d-flex text-decoration-none text-dark w-100 p-2">
                                <div class="col">@($"{item.FirstName} {item.LastName}")</div>
                                <div class="col">@item.Address</div>
                                <div class="col">@item.ApplicationDate.ToString("MMM dd, yyyy")</div>
                                <div class="col">
                                    <div>
                                        <span class="badge bg-info">@item.Role</span>
                                        <span class="badge bg-secondary">@item.Department</span>
                                    </div>

                                    <strong>Course:</strong> @item.CourseAndYear
                                </div>
                                <div class="col">
                                    #: @item.VehiclePlateNo <br />
                                    <strong>Info:</strong> @($"{item.VehicleType} {item.Maker} {item.Color}") <br />
                                    <strong>Reg:</strong> @item.RegistrationExpiryDate?.ToString("MMM dd, yyyy")
                                </div>
                                <div class="col text-center">
                                    @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                                    {
                                        <span class="text-primary">View PDF</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No PDF</span>
                                    }
                                </div>
                                <div class="col text-center">
                                    @if (!string.IsNullOrEmpty(item.RegistrationPdfPath))
                                    {
                                        <span class="text-primary">View PDF</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No PDF</span>
                                    }
                                </div>
                            </a>

                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-3">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Gate Pass
            </li>
        </ol>
    </nav>
}

