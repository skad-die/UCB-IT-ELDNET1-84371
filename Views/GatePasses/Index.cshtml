@model IEnumerable<Accessio.Models.GatePass>

@{
    ViewData["Title"] = "Index";
}

<h1>Gate Pass Applications</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.ApplicationDate)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>@Html.DisplayNameFor(model => model.CourseAndYear)</th>
            <th>@Html.DisplayNameFor(model => model.VehiclePlateNo)</th>
            <th>@Html.DisplayNameFor(model => model.RegistrationExpiryDate)</th>
            <th>@Html.DisplayNameFor(model => model.VehicleType)</th>
            <th>@Html.DisplayNameFor(model => model.Maker)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th>@Html.DisplayNameFor(model => model.StudyLoadPdfPath)</th>
            <th>@Html.DisplayNameFor(model => model.RegistrationPdfPath)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.CourseAndYear)</td>
                <td>@Html.DisplayFor(modelItem => item.VehiclePlateNo)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationExpiryDate)</td>
                <td>@Html.DisplayFor(modelItem => item.VehicleType)</td>
                <td>@Html.DisplayFor(modelItem => item.Maker)</td>
                <td>@Html.DisplayFor(modelItem => item.Color)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                    {
                        <a href="@item.StudyLoadPdfPath" target="_blank" class="btn btn-sm btn-link">View PDF</a>
                    }
                    else
                    {
                        <span>No PDF</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.RegistrationPdfPath))
                    {
                        <a href="@item.RegistrationPdfPath" target="_blank" class="btn btn-sm btn-link">View PDF</a>
                    }
                    else
                    {
                        <span>No PDF</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
