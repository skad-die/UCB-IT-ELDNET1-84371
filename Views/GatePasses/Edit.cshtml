@model Accessio.Models.GatePass

@{
    ViewData["Title"] = "Edit Gate Pass";
}

<div class="container mt-4" style="max-width: 700px">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">EDIT GATE PASS APPLICATION</h4>
        </div>
        <div class="card-body">
            <div id="formContainer">
                <form id="gatePassEditForm" asp-action="Edit" asp-controller="GatePasses" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="ApplicationDate" class="form-label fw-bold">Application Date</label>
                        <input asp-for="ApplicationDate" type="date" class="form-control" />
                        <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label fw-bold"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role" class="form-label fw-bold d-block">Role</label>
                        @foreach (var role in Html.GetEnumSelectList<RoleOption>())
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio"
                                       asp-for="Role" value="@role.Value"
                                       id="role_@role.Value" />
                                <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                            </div>
                        }
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label fw-bold"></label>
                            <select asp-for="Department" class="form-select" asp-items="Html.GetEnumSelectList<DepartmentOption>()">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CourseAndYear" class="form-label fw-bold"></label>
                            <input asp-for="CourseAndYear" class="form-control" />
                            <span asp-validation-for="CourseAndYear" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="fw-bold mt-4">Vehicle Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VehiclePlateNo" class="form-label fw-bold"></label>
                            <input asp-for="VehiclePlateNo" class="form-control" />
                            <span asp-validation-for="VehiclePlateNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistrationExpiryDate" class="form-label fw-bold"></label>
                            <input asp-for="RegistrationExpiryDate" type="date" class="form-control" />
                            <span asp-validation-for="RegistrationExpiryDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="VehicleType" class="form-label fw-bold"></label>
                            <input asp-for="VehicleType" class="form-control" />
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Maker" class="form-label fw-bold"></label>
                            <input asp-for="Maker" class="form-control" />
                            <span asp-validation-for="Maker" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Color" class="form-label fw-bold"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="fw-bold mt-4">Attachments</h5>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Study Load</label>
                        @if (!string.IsNullOrEmpty(Model.StudyLoadPdfPath))
                        {
                            <p>Current File: <a href="@Model.StudyLoadPdfPath" target="_blank">View PDF</a></p>
                        }
                        <input type="file" name="StudyLoadPdf" class="form-control" accept="application/pdf" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Registration</label>
                        @if (!string.IsNullOrEmpty(Model.RegistrationPdfPath))
                        {
                            <p>Current File: <a href="@Model.RegistrationPdfPath" target="_blank">View PDF</a></p>
                        }
                        <input type="file" name="RegistrationPdf" class="form-control" accept="application/pdf" />
                    </div>

                    <div class="text-center mt-4">
                        <input type="submit" value="Update Request" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
            <h5 class="mb-3 text-success">Success</h5>
            <p>Your Gate Pass application was updated successfully!</p>
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $("#gatePassEditForm").submit(function (e) {
            e.preventDefault();
            if (!$(this).valid()) return;

            var formData = new FormData(this);

            $.ajax({
                url: this.action,
                type: this.method,
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        var successModal = new bootstrap.Modal(document.getElementById("successModal"));
                        successModal.show();
                        document.getElementById("successModal").addEventListener('hidden.bs.modal', function () {
                            window.location.href = '@Url.Action("Index","GatePasses")';
                        });
                    } else {
                        $("#formContainer").html(response);
                    }
                },
                error: function () {
                    alert("Something went wrong. Please try again.");
                }
            });
        });
    </script>
}
