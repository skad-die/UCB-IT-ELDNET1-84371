@model Accessio.Models.GatePass

@{
    ViewData["Title"] = "Edit Gate Pass Application";
}

<div class="container mt-4" style="max-width: 700px">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">EDIT GATE PASS APPLICATION</h4>
        </div>
        <div class="card-body">
            <div id="formContainer">
                <form id="gatePassForm" asp-action="Edit" asp-controller="GatePasses" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="ApplicationDate" class="form-label fw-bold">Application Date</label>
                        <input asp-for="ApplicationDate" class="form-control" type="date" />
                        <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label fw-bold"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role" class="form-label fw-bold d-block"></label>
                        @foreach (var role in Html.GetEnumSelectList<RoleOption>())
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Role" value="@role.Value" id="role_@role.Value" />
                                <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                            </div>
                        }
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label fw-bold"></label>
                            <select asp-for="Department" class="form-select" asp-items="Html.GetEnumSelectList<DepartmentOption>()">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CourseAndYear" class="form-label fw-bold"></label>
                            <input asp-for="CourseAndYear" class="form-control" />
                            <span asp-validation-for="CourseAndYear" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="fw-bold mt-4">Vehicle Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VehiclePlateNo" class="form-label fw-bold"></label>
                            <input asp-for="VehiclePlateNo" class="form-control" />
                            <span asp-validation-for="VehiclePlateNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistrationExpiryDate" class="form-label fw-bold"></label>
                            <input asp-for="RegistrationExpiryDate" type="date" class="form-control" />
                            <span asp-validation-for="RegistrationExpiryDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="VehicleType" class="form-label fw-bold"></label>
                            <input asp-for="VehicleType" class="form-control" />
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Maker" class="form-label fw-bold"></label>
                            <input asp-for="Maker" class="form-control" />
                            <span asp-validation-for="Maker" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Color" class="form-label fw-bold"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="fw-bold mt-4">Attachments</h5>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Study Load</label>
                        <input type="file" name="StudyLoadPdf" class="form-control" accept="application/pdf" />
                        @if (!string.IsNullOrEmpty(Model.StudyLoadPdfPath))
                        {
                            <small class="text-muted">Current: @Model.StudyLoadPdfPath</small>
                        }
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Registration</label>
                        <input type="file" name="RegistrationPdf" class="form-control" accept="application/pdf" />
                        @if (!string.IsNullOrEmpty(Model.RegistrationPdfPath))
                        {
                            <small class="text-muted">Current: @Model.RegistrationPdfPath</small>
                        }
                    </div>

                    <div class="text-center mt-4">
                        <input type="submit" value="Save Changes" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-3">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="GatePasses" asp-action="Index">Gate Pass</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Edit
            </li>
        </ol>
    </nav>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#gatePassForm").submit(function (e) {
            e.preventDefault();
            if (!$(this).valid()) return;

            var formData = new FormData(this);

            $.ajax({
                url: this.action,
                type: this.method,
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        alert("Gate Pass updated successfully!");
                        window.location.href = "@Url.Action("Index","GatePasses")";
                    } else {
                        $("#formContainer").html(response);
                    }
                },
                error: function () {
                    alert("Something went wrong. Please try again.");
                }
            });
        });
    </script>
}
