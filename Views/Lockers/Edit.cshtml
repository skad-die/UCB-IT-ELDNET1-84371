@model Accessio.Models.Locker

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Locker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <select asp-for="Semester"
                        class="form-control"
                        asp-items="@(ViewData["SemesterOptions"] as List<SelectListItem>)"></select>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Replace Study Load PDF</label>
                <input asp-for="StudyLoadPdfPath" type="file" class="form-control" accept="application/pdf" />
                @if (!string.IsNullOrEmpty(Model.StudyLoadPdfPath))
                {
                    <a href="@Model.StudyLoadPdfPath" target="_blank" class="btn btn-link mt-1">Current PDF</a>
                }
                <span asp-validation-for="StudyLoadPdfPath" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-3">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Lockers" asp-action="Index">Lockers</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Edit
            </li>
        </ol>
    </nav>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
