@model IEnumerable<Accessio.Models.Locker>

@{
    ViewData["Title"] = "Lockers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Locker Requests</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Request</a>
    </div>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>ID Number</th>
                <th>Full Name</th>
                <th>@Html.DisplayNameFor(model => model.Semester)</th>
                <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                <th>Study Load</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td colspan="5" class="p-0">
                        <a href="@Url.Action("Details", new { id = item.Id })"
                           class="d-flex text-decoration-none text-dark w-100 p-2">
                            <div class="col">@item.IdNumber</div>
                            <div class="col">@($"{item.FirstName} {item.LastName}")</div>
                            <div class="col">@item.Semester</div>
                            <div class="col">@item.ContactNumber</div>
                            <div class="col">
                                @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                                {
                                    <span class="text-primary">View PDF</span>
                                }
                                else
                                {
                                    <span class="text-muted">No PDF</span>
                                }
                            </div>
                        </a>
                    </td>

                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Breadcrumbs {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-3">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Lockers
            </li>
        </ol>
    </nav>
}
