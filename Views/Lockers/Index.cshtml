@model IEnumerable<Accessio.Models.Locker>

@{
    ViewData["Title"] = "Lockers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Locker Requests</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Request</a>
    </div>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID Number</th>
                <th>Full Name</th>
                <th>@Html.DisplayNameFor(model => model.Semester)</th>
                <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                <th>Study Load</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdNumber</td>
                    <td>@($"{item.FirstName} {item.LastName}")</td>
                    <td>@item.Semester</td>
                    <td>@item.ContactNumber</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.StudyLoadPdfPath))
                        {
                            <a href="@item.StudyLoadPdfPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                View PDF
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No PDF</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
