@model Accessio.Models.Locker

@{
    ViewData["Title"] = "Locker Request Form";
}

<div class="container mt-4" style="max-width: 700px">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">LOCKER REQUEST FORM</h4>
        </div>
        <div id="formContainer" class="card-body">
            <form id="lockerRequestForm" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="IdNumber" class="form-label fw-bold">ID Number</label>
                    <input asp-for="IdNumber" class="form-control" />
                    <span asp-validation-for="IdNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Semester" class="form-label"></label>
                    <select asp-for="Semester" class="form-select w-50"
                            asp-items="Html.GetEnumSelectList<Accessio.Models.SemesterOption>()">
                    </select>
                    <span asp-validation-for="Semester" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ContactNumber" class="form-label fw-bold">Contact Number</label>
                    <input asp-for="ContactNumber" class="form-control" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StudyLoadPdfPath" class="form-label fw-bold">Attached Study Load and Registration</label>
                    <input asp-for="StudyLoadPdfPath" type="file" class="form-control" accept="application/pdf" />
                    <span asp-validation-for="StudyLoadPdfPath" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Submit Request" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center p-4">
            <h5 class="mb-3 text-success">Success</h5>
            <p>Your Locker Request was submitted successfully!</p>
            <button type="button" class="btn btn-primary text-wrap" data-bs-dismiss="modal">OK</button>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $("#lockerRequestForm").submit(function (e) {
            e.preventDefault();
            if (!$(this).valid()) {
                return;
            }

            var formData = new FormData(this);

            $.ajax({
                url: this.action,
                type: this.method,
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        var successModal = new bootstrap.Modal(document.getElementById("successModal"));
                        successModal.show();
                        $("#lockerRequestForm")[0].reset();
                    } else {
                        $("#formContainer").html(response);
                    }
                },
                error: function () {
                    alert("Something went wrong. Please try again.");
                }
            });
        });
    </script>
}
