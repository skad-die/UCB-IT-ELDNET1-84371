@{
    ViewData["Title"] = "Dashboard";
}


<div class="alert alert-dismissible alert-warning">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <h4 class="alert-heading">Warning!</h4>
    <p class="mb-0">This dashboard is not yet done. <a href="#" class="alert-link">NEEDS MORE WORK!!! </a>.</p>
</div>

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Dashboard</h1>
        <small class="text-muted">Overview & quick actions</small>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <a href="@Url.Action("Index", "Lockers")" class="card h-100 text-decoration-none text-dark flat-hover">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted">Lockers</h6>
                        <div class="display-6 fw-bold">@ViewData["TotalLockers"]</div>
                        <small class="text-muted">Total requests</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a href="@Url.Action("Index", "GatePasses")" class="card h-100 text-decoration-none text-dark flat-hover">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted">Gate Passes</h6>
                        <div class="display-6 fw-bold">@ViewData["TotalGatePasses"]</div>
                        <small class="text-muted">Total requests</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Pending Tasks</h6>
                    <div class="display-6 text-warning fw-bold">—</div>
                    <small class="text-muted">Requires attention</small>
                </div>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Messages</h6>
                    <div class="display-6 fw-bold">—</div>
                    <small class="text-muted">Unread</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    Recent activity
                </div>
                <div class="card-body">
                    <p class="text-muted">No activity to show — this is a placeholder area for recent events, logs or feed items.</p>

                    <ul class="list-group list-group-flush" aria-live="polite">
                        <li class="list-group-item small text-muted">Placeholder: latest events will appear here.</li>
                        <li class="list-group-item small text-muted">Placeholder: recent logins, submissions, updates, etc.</li>
                        <li class="list-group-item small text-muted">Placeholder: click an item to view details.</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    Quick actions
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="@Url.Action("Create", "Lockers")"> Request Locker </a>
                        <a class="btn btn-primary" href="@Url.Action("Create", "GatePasses")">Request Gate Pass</a>
                        <a class="btn btn-secondary" href="#" role="button">Placeholder</a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    Placeholder
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong class="text-success">OK</strong></p>
                    <small class="text-muted">(placeholder)</small>
                </div>
            </div>
        </div>
    </div>
</div>
